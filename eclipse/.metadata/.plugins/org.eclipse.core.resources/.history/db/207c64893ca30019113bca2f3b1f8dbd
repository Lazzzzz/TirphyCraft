package com.laz.tirphycraft.objects.items;

import java.util.Random;

import com.laz.tirphycraft.objects.base.ItemBase;
import com.laz.tirphycraft.util.Reference;
import com.laz.tirphycraft.util.interfaces.IStructure;
import com.laz.tirphycraft.world.gen.generators.froz.WorldGenIceVillage;
import com.laz.tirphycraft.world.gen.generators.trees.froz.WorldGenFrozBushTree;

import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.item.ItemStack;
import net.minecraft.server.MinecraftServer;
import net.minecraft.util.ActionResult;
import net.minecraft.util.EnumHand;
import net.minecraft.util.ResourceLocation;
import net.minecraft.util.Rotation;
import net.minecraft.util.math.Vec3d;
import net.minecraft.world.World;
import net.minecraft.world.gen.structure.template.Template;
import net.minecraft.world.gen.structure.template.TemplateManager;

public class debugStickySticky extends ItemBase  implements IStructure{

	public debugStickySticky() {
		super("debug", 1);
	}

	@Override
	public ActionResult<ItemStack> onItemRightClick(World worldIn, EntityPlayer playerIn, EnumHand handIn) {
		MinecraftServer mcServer = worldIn.getMinecraftServer();
		TemplateManager manager = worldServer.getStructureTemplateManager();
		
		ResourceLocation village_littlehouse1 = new ResourceLocation(Reference.MOD_ID, "froz/village/little_house_1");
		Template template_littlehouse1 = manager.get(mcServer, village_littlehouse1);
		template_littlehouse1.addBlocksToWorldChunk(worldIn, playerIn.getPosition(), settings.setRotation(Rotation.NONE));
		return super.onItemRightClick(worldIn, playerIn, handIn);
	}

}
