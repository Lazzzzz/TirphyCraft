package com.laz.tirphycraft.util.loot;

import java.util.Random;

import net.minecraft.block.Block;
import net.minecraft.item.Item;

public class SetLoot {
	
	private final Item item;
	private final Block block;
	private final int chance;
	
	public SetLoot(Item item, int chance) {
		this.item = item;
		this.chance = chance;
		this.block = null;
	}
	
	public SetLoot(Block block, int chance) {
		this.block = block;
		this.chance = chance;
		this.item = null;
	}
	
	public boolean isPick(Random rand) {
		if (rand.nextInt(101) < this.chance) return true;
		else return false;
	}
	
}
