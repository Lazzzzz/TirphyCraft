package com.laz.tirphycraft.objects.blocks.customBlock.froz.cavePick;

import net.minecraft.block.BlockLog;
import net.minecraft.util.EnumFacing;
import net.minecraft.util.IStringSerializable;

public static enum EnumAxisY implements IStringSerializable {
	X("x"), Y("y"), Z("z"), NONE("none");

	private final String name;

	private EnumAxisY(String name) {
		this.name = name;
	}

	public String toString() {
		return this.name;
	}

	public static BlockLog.EnumAxisY fromFacingAxis(EnumFacing.Axis axis) {
		switch (axis) {
		case X:
			return X;
		case Y:
			return Y;
		case Z:
			return Z;
		default:
			return NONE;
		}
	}

	public String getName() {
		return this.name;
	}

}