package com.laz.tirphycraft.objects.blocks.customBlock.froz.cavePick;

import com.laz.tirphycraft.init.BlockInit;
import com.laz.tirphycraft.objects.base.GrassBase;

import net.minecraft.block.material.Material;
import net.minecraft.block.state.IBlockState;
import net.minecraft.util.math.BlockPos;
import net.minecraft.world.World;

public class BlockFrozCaveMoss extends GrassBase {
	public BlockFrozCaveMoss() {
		super("froz_cave_moss");

	}

	@Override
	public void onBlockAdded(World world, BlockPos pos, IBlockState state) {
		world.scheduleUpdate(pos, this, this.tickRate(world));

	}

	@Override
	public boolean canPlaceBlockAt(World worldIn, BlockPos pos) {
		return worldIn.getBlockState(pos.up()).isFullCube();
	}

	@Override
	protected boolean canSustainBush(IBlockState state) {
		return state.getMaterial() == Material.GROUND || state.getMaterial() == Material.GRASS
				|| state.getBlock().getDefaultState() == BlockInit.FROZ_VINES.getDefaultState();
	}


}