package com.laz.tirphycraft.world.gen.generators.plants;

import java.util.Random;

import com.laz.tirphycraft.init.BlockInit;

import net.minecraft.block.state.IBlockState;
import net.minecraft.util.math.BlockPos;
import net.minecraft.world.World;
import net.minecraft.world.gen.feature.WorldGenAbstractTree;

public class WorldGenLaputaBigCloud extends WorldGenAbstractTree {
	public WorldGenLaputaBigCloud() {
		super(false);
	}

	@Override
	public boolean generate(World world, Random rand, BlockPos pos) {
		for (int i = -3; i < 4; i++) {
			for (int j = -3; j < 4; j++) {
				for (int k = 0; k < 2; k++) {
					world.setBlockState(new BlockPos(pos.getX() + i - k + 1, pos.getY() + k, pos.getZ() + j - k + 1), BlockInit.CLOUD.getDefaultState());
				}
			}
		}

		world.setBlockState(new BlockPos(pos.getX(), pos.getY() + 1, pos.getZ()), BlockInit.CLOUD.getDefaultState());

		if (rand.nextInt(2) == 0)
			world.setBlockToAir(new BlockPos(pos.getX() + 3, pos.getY(), pos.getZ() + 3));
		if (rand.nextInt(2) == 0)
			world.setBlockToAir(new BlockPos(pos.getX() - 3, pos.getY(), pos.getZ() + 3));
		if (rand.nextInt(2) == 0)
			world.setBlockToAir(new BlockPos(pos.getX() - 3, pos.getY(), pos.getZ() - 3));
		if (rand.nextInt(2) == 0)
			world.setBlockToAir(new BlockPos(pos.getX() + 3, pos.getY(), pos.getZ() - 3));
		
		if (rand.nextInt(2) == 0)
			world.setBlockToAir(new BlockPos(pos.getX() + 1, pos.getY()+1, pos.getZ() + 1));
		if (rand.nextInt(2) == 0)
			world.setBlockToAir(new BlockPos(pos.getX() - 1, pos.getY()+1, pos.getZ() + 1));
		if (rand.nextInt(2) == 0)
			world.setBlockToAir(new BlockPos(pos.getX() - 1, pos.getY()+1, pos.getZ() - 1));
		if (rand.nextInt(2) == 0)
			world.setBlockToAir(new BlockPos(pos.getX() + 1, pos.getY()+1, pos.getZ() - 1));

		return true;

	}
}
