package com.laz.tirphycraft.dimension.Froz;

import com.laz.tirphycraft.util.Reference;

import net.minecraft.server.MinecraftServer;
import net.minecraft.util.ResourceLocation;
import net.minecraft.world.World;
import net.minecraft.world.WorldServer;
import net.minecraft.world.gen.structure.template.Template;
import net.minecraft.world.gen.structure.template.TemplateManager;
import net.minecraftforge.fml.common.FMLCommonHandler;

public class GenLoadVillage {

	ResourceLocation[] structures = new ResourceLocation[] {
			new ResourceLocation(Reference.MOD_ID, "froz/village/little_house_1"),
			new ResourceLocation(Reference.MOD_ID, "froz/village/little_house_2"),
			new ResourceLocation(Reference.MOD_ID, "froz/village/house_1"),
			new ResourceLocation(Reference.MOD_ID, "froz/village/tower"),
			new ResourceLocation(Reference.MOD_ID, "froz/village/camp"),
			new ResourceLocation(Reference.MOD_ID, "froz/village/plantation") };

	Template template_village_littlehouse1;
	Template template_village_littlehouse2;
	Template template_village_house1;
	Template template_village_tower;
	Template template_village_camp;
	Template template_village_plantation;

	public GenLoadVillage(World worldIn) {
		TemplateManager manager = FMLCommonHandler.instance().getMinecraftServerInstance().getWorld(0)
				.getStructureTemplateManager();
		MinecraftServer mcServer = worldIn.getMinecraftServer();

		template_village_littlehouse1 = manager.get(mcServer, structures[0]);
		template_village_littlehouse2 = manager.get(mcServer, structures[1]);
		template_village_house1 = manager.get(mcServer, structures[2]);
		template_village_tower = manager.get(mcServer, structures[3]);
		template_village_camp = manager.get(mcServer, structures[4]);
		template_village_plantation = manager.get(mcServer, structures[5]);

	}
}
