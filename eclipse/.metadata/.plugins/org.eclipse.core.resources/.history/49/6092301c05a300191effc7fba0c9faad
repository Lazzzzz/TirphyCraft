package com.laz.tirphycraft.world.biomes.froz;

import java.util.Random;

import com.laz.tirphycraft.init.BlockInit;

import net.minecraft.init.Blocks;
import net.minecraft.world.World;
import net.minecraft.world.biome.Biome;
import net.minecraft.world.chunk.ChunkPrimer;

public class BiomeFrozPlate extends Biome {

	public BiomeFrozPlate() {
		super(new BiomeProperties("Plate").setBaseHeight(1F).setHeightVariation(0.125F).setTemperature(-10F)
				.setRainfall(100F).setWaterColor(4092311));

		this.topBlock = BlockInit.POWDER_SNOW.getDefaultState();
		this.fillerBlock = Blocks.DIRT.getDefaultState();

		this.decorator.generateFalls = false;
		this.decorator.treesPerChunk = 2;
	}

	@Override
	public void genTerrainBlocks(World worldIn, Random rand, ChunkPrimer primer, int x, int z, double noiseVal) {
		if (rand.nextBoolean()) {
			this.topBlock = BlockInit.FROZ_COBBLESTONE.getDefaultState();
			this.fillerBlock = Blocks.DIRT.getDefaultState();
		} else {
			this.topBlock = Blocks.GRASS.getDefaultState();
			this.fillerBlock = Blocks.DIRT.getDefaultState();

		}
		super.generateBiomeTerrain(worldIn, rand, primer, x, z, noiseVal);
	}
}