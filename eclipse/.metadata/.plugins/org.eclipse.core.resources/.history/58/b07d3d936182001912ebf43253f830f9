package com.laz.tirphycraft.proxy;

import com.setrion.koratio.blocks.ModBlocks;
import com.setrion.koratio.main.Koratio;
import com.setrion.koratio.network.MyMessage;
import com.setrion.koratio.network.PacketHandler;
import com.setrion.koratio.proxy.ClientProxy;

import net.minecraft.client.Minecraft;
import net.minecraft.client.renderer.texture.TextureMap;
import net.minecraft.util.ResourceLocation;
import net.minecraftforge.client.event.TextureStitchEvent;
import net.minecraftforge.fml.common.eventhandler.SubscribeEvent;
import net.minecraftforge.fml.common.gameevent.TickEvent;
import net.minecraftforge.fml.common.gameevent.TickEvent.ClientTickEvent;

@net.minecraftforge.fml.common.Mod.EventBusSubscriber(modid = "koratio", value = {
		net.minecraftforge.fml.relauncher.Side.CLIENT })
public class ClientEvent {

	public ClientEvent() {
	}

	@SubscribeEvent
	public static void texStitch(TextureStitchEvent.Pre event) {
		TextureMap map = event.getMap();

		map.registerSprite(new ResourceLocation(Koratio.modid, "particle/glint"));
	}
}
