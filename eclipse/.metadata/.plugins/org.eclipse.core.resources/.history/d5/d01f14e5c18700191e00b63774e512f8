package com.laz.tirphycraft.util.loot;

import java.util.Random;

import com.laz.tirphycraft.init.BlockInit;
import com.laz.tirphycraft.init.ItemInit;

import net.minecraft.block.Block;
import net.minecraft.entity.item.EntityItem;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraft.util.math.BlockPos;
import net.minecraft.world.World;

public class SetLoot {
	
	private final ItemStack item;
	private final int chance;
	
	public SetLoot(Item item, int chance) {
		this.item = new ItemStack(item, 1);
		this.chance = chance;
	}
	
	public SetLoot(Block block, int chance) {
		this.item = new ItemStack(block, 1);
		this.chance = chance;
	}
	
	public boolean isPick(Random rand) {
		if (rand.nextInt(101) < this.chance) return true;
		else return false;
	}
	
	public boolean isItem() {
		if (this.item == null) return false;
		else return true;
	}
	
	public void spawnIt(World worldIn, BlockPos pos) {
		if (this.isItem()) {
			worldIn.spawnEntity(new EntityItem(worldIn, pos.getX(), pos.getY(), pos.getZ(), new ItemStack(BlockInit.ALLOY_FURNACE, 1)));
		}
	}
	
}
