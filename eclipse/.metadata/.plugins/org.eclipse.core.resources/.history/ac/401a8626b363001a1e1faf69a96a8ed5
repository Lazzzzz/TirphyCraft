package com.laz.tirphycraft.objects.items.other;

import com.laz.tirphycraft.init.BiomeInit;
import com.laz.tirphycraft.init.ItemInit;
import com.laz.tirphycraft.objects.base.ItemBase;

import net.minecraft.entity.Entity;
import net.minecraft.item.ItemStack;
import net.minecraft.util.text.TextComponentString;
import net.minecraft.world.World;
import net.minecraft.world.biome.Biome;

public class ItemMixedDust extends ItemBase {

	public ItemMixedDust(String name, int stack) {
		super(name, stack);
		setMaxDamage(10);
	}

	@Override
	public void onUpdate(ItemStack stack, World worldIn, Entity entityIn, int itemSlot, boolean isSelected) {
		if (!worldIn.isRemote) {
			if (worldIn.getBiome(entityIn.getPosition()) == BiomeInit.LAPUTA_CRYSTAL) {
				if ( worldIn.rand.nextInt(2) == 0) {
					setDamage(stack, 1);
					if (this.getDamage(stack) == 0) {
						entityIn.sendMessage(
								new TextComponentString("\u00A75" + "You just reach on the origin of the matter ..."));
						stack = new ItemStack(ItemInit.ORIGIN_MATTER);
					}
				}
			}
		}

		super.onUpdate(stack, worldIn, entityIn, itemSlot, isSelected);
	}

}
