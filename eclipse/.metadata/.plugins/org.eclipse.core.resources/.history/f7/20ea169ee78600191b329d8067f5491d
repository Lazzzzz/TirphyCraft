				1000, "");
		ENTITY_FROZEN_BUFFALO = config.getInt("ENTITY_FROZEN_BUFFALO", category, Reference.ENTITY_FROZEN_BUFFALO,
				Reference.ENTITY_FROZEN_BUFFALO, 1000, "");
		ENTITY_FROZEN_BOAR = config.getInt("ENTITY_FROZEN_BOAR", category, Reference.ENTITY_FROZEN_BOAR,
				Reference.ENTITY_FROZEN_BOAR, 1000, "");
		ENTITY_BUFFALO = config.getInt("ENTITY_BUFFALO", category, Reference.ENTITY_BUFFALO, Reference.ENTITY_BUFFALO,
				1000, "");
		ENTITY_BOAR = config.getInt("ENTITY_BOAR", category, Reference.ENTITY_BOAR, Reference.ENTITY_BOAR, 1000, "");
