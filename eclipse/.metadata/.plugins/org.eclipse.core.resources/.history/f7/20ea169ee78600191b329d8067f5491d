		PRIMARY_STRENGTH = config.getInt("PRIMARY_STRENGTH", category, Reference.PRIMARY_STRENGTH,
				Reference.PRIMARY_STRENGTH, 1000, "");
		ENTITY_STELLAR = config.getInt("ENTITY_STELLAR", category, Reference.ENTITY_STELLAR, Reference.ENTITY_STELLAR,
				1000, "");
		ENTITY_COLOSSE = config.getInt("ENTITY_COLOSSE", category, Reference.ENTITY_COLOSSE, Reference.ENTITY_COLOSSE,
				1000, "");

		category = "IDs GUI";

		config.addCustomCategoryComment(category, "Set ID's for GUI");

		GUI_PYRODES_FURNACE = config.getInt("GUI_PYRODES_FURNACE", category, Reference.GUI_PYRODES_FURNACE,
				Reference.GUI_PYRODES_FURNACE, 1000, "");
		GUI_ALLOY_FURNACE = config.getInt("GUI_ALLOY_FURNACE", category, Reference.GUI_ALLOY_FURNACE,
				Reference.GUI_ALLOY_FURNACE, 1000, "");

		category = "IDs Dimensions";

		config.addCustomCategoryComment(category, "Set ID's for Dimensions");

		DIMENSION_NOXIS_ID = config.getInt("DIMENSION_NOXIS_ID", category, Reference.DIMENSION_NOXIS_ID,
				Reference.DIMENSION_NOXIS_ID, 1000, "");
		DIMENSION_LAPUTA_ID = config.getInt("DIMENSION_LAPUTA_ID", category, Reference.DIMENSION_LAPUTA_ID,
				Reference.DIMENSION_LAPUTA_ID, 1000, "");
