		DEAD_PLAYER = config.getInt("DEAD_PLAYER", category, Reference.DEAD_PLAYER, Reference.DEAD_PLAYER, 1000, "");
		KIWI = config.getInt("KIWI", category, Reference.KIWI, Reference.KIWI, 1000, "");
		PHARAOH = config.getInt("PHARAOH", category, Reference.PHARAOH, Reference.PHARAOH, 1000, "");
		MUMMY = config.getInt("MUMMY", category, Reference.MUMMY, Reference.MUMMY, 1000, "");
		HELL_KING = config.getInt("HELL_KING", category, Reference.HELL_KING, Reference.HELL_KING, 1000, "");
		GIANT_SPIDER = config.getInt("GIANT_SPIDER", category, Reference.GIANT_SPIDER, Reference.GIANT_SPIDER, 1000,
				"");
		FAILED_GOLEM = config.getInt("FAILED_GOLEM", category, Reference.FAILED_GOLEM, Reference.FAILED_GOLEM, 1000,
				"");
		HEAD_LESS = config.getInt("HEAD_LESS", category, Reference.HEAD_LESS, Reference.HEAD_LESS, 1000, "");
		GIRIL = config.getInt("GIRIL", category, Reference.GIRIL, Reference.GIRIL, 1000, "");
		POSEIDON = config.getInt("POSEIDON", category, Reference.POSEIDON, Reference.POSEIDON, 1000, "");
		ARTIKON = config.getInt("ARTIKON", category, Reference.ARTIKON, Reference.ARTIKON, 1000, "");
		TOXIC_COW = config.getInt("TOXIC_COW", category, Reference.TOXIC_COW, Reference.TOXIC_COW, 1000, "");
		SKULL = config.getInt("SKULL", category, Reference.SKULL, Reference.SKULL, 1000, "");
		ENTITY_MOTHMOTH = config.getInt("ENTITY_MOTHMOTH", category, Reference.ENTITY_MOTHMOTH,
				Reference.ENTITY_MOTHMOTH, 1000, "");
		ENTITY_LAYTURTLE = config.getInt("ENTITY_LAYTURTLE", category, Reference.ENTITY_LAYTURTLE,
