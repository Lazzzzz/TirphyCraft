				"");
		ENTITY_TOTAM = config.getInt("ENTITY_TOTAM", category, Reference.ENTITY_TOTAM, Reference.ENTITY_TOTAM, 1000,
				"");
		QUEEN_CREEPER = config.getInt("QUEEN_CREEPER", category, Reference.QUEEN_CREEPER, Reference.QUEEN_CREEPER, 1000,
				"");
		GRINDLY_UP = config.getInt("GRINDLY_UP", category, Reference.GRINDLY_UP, Reference.GRINDLY_UP, 1000, "");
		GRINDLY_FRONT = config.getInt("ENTITY_MONTAUK", category, Reference.GRINDLY_FRONT, Reference.GRINDLY_FRONT,
