package com.laz.tirphycraft.util;

import java.util.Random;

import net.minecraft.util.Rotation;
import net.minecraft.util.math.BlockPos;
import net.minecraft.world.World;
import net.minecraft.world.gen.structure.template.PlacementSettings;
import net.minecraft.world.gen.structure.template.Template;

public class StructureUtil {
	public void placeGood(Template template, World worldIn, PlacementSettings settings, BlockPos pos, Random rand) {
		int sizeX = template.getSize().getX() / 2;
		int sizeZ = template.getSize().getZ() / 2;
		
		BlockPos newPos = pos.add(sizeX, 0, sizeZ);
		
		template.addBlocksToWorldChunk(worldIn, newPos, settings.setRotation(pickRotion(rand)));
	}
	
	public Rotation pickRotion(Random rand) {
		int i = rand.nextInt(4);
		if (i == 0) return Rotation.CLOCKWISE_180;
		if (i == 1) return Rotation.CLOCKWISE_90;
		if (i == 2) return Rotation.COUNTERCLOCKWISE_90;
		else return Rotation.NONE;
	}
}
