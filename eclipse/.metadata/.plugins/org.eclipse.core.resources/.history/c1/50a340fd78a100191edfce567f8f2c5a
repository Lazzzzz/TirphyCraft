package com.laz.tirphycraft.world.biomes.froz;

import java.util.Random;

import net.minecraft.init.Blocks;
import net.minecraft.util.math.BlockPos;
import net.minecraft.world.World;
import net.minecraft.world.biome.Biome;

public class BiomeFrozEternal extends Biome {

	public BiomeFrozEternal() {

		super(new BiomeProperties("Froz Eternal").setBaseHeight(-1.0F).setHeightVariation(1.0F)
				.setTemperature(-10F).setRainfall(100F).setWaterColor(4092311));

		topBlock = Blocks.GRASS.getDefaultState();
		fillerBlock = Blocks.DIRT.getDefaultState();

		this.decorator.treesPerChunk = 1;
		this.spawnableMonsterList.clear();
		this.spawnableCreatureList.clear();
		this.spawnableWaterCreatureList.clear();
		this.spawnableCaveCreatureList.clear();

	}

	@Override
	public void decorate(World worldIn, Random rand, BlockPos pos) {
	}
	
	@Override
	public int getGrassColorAtPos(BlockPos pos) {
		return 2908825;
	}

}
